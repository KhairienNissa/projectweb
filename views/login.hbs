<html>
    <head>
        <title>Login</title>
        <link rel="stylesheet" href="public/login.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css"
      />
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light px-5">
            <div class="container-fluid">
              <img class="navbar-brand" src="public/image/brandred.png" width="40px">
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                  <li style="margin-left: 20px;" class="nav-item">
                    <a class="nav-link" aria-current="page" href="/home">Home</a>
                  </li>
                
                </ul>
                <div class="d-flex">
                  <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                  <li style="margin-left: 20px;" class="nav-item">
                    <a class="nav-link " aria-current="page" href="/register">Register</a>
                  </li>
                  <li style="margin-left: 20px; margin-right: 20px;" class="nav-item">
                    <a class="nav-link active" href="/login">Login</a>
                  </li>
                  <a href="/my-contact"style="font-size: 13px; border-radius: 10px; " class="btn btn-dark px-3 pt-2" type="submit">Contact Me</a>
                </div>
              </div>
            </div>
          </nav>

        {{#if messages.danger}}
              <div class="alert alert-danger" role="alert">
                {{messages.danger}}
              </div>
            {{/if}}
            {{#if messages.success}}
              <div class="alert alert-success" role="alert">
                {{messages.success}}
              </div>
            {{/if}}
          
    <div class="form-section" margin-bottom="100px"> 
        <center><h4>LOGIN TO YOUR ACCOUNT</h4></center>

        <form action="/login" method="POST"
          
          style="width: 470px; margin: 70px auto"
        >
          <!-- project name -->
          <label
            class="label"
            for="email"
            style="font-size: 18px; font-weight: bold"
            >Email</label
          >
          <br />
          <input class="email" type="email" id="email" name="inputEmail"/>
          <br />

          <label
            class="label"
            for="password"
            style="font-size: 18px; font-weight: bold"
            >Password</label>
          <br />
          <input class="password" type="password" id="password" name="inputPassword"/>
          <br />
        
          <!-- button -->
          <button class="buttonForm" type="submit">submit</button>
        </form>
</body>
</html>