    <div class="form-section" margin-bottom="100px"> 
      <center><h3>ADD MY PROJECT</h3></center>

      <form action="/add-project" method="POST" enctype="multipart/form-data"
        
        style="width: 470px; margin: 70px auto"
      >
        <!-- project name -->
        <label
          class="label"
          for="project-name"
          style="font-size: 18px; font-weight: bold"
          >Project Name</label
        >
        <br />
        <input class="projectName" type="text" id="project-name" name="projectname"/>
        <br />

        <!-- date -->
        <div class="date">
          <div class="start">
            <label class="label" for="start-date">Start Date</label> <br />
            <input type="date" id="start-date" name="startdate"/>
          </div>
          <div class="end" style="margin-left: 24px">
            <label class="label" for="end-date">End Date</label> <br />
            <input type="date" id="end-date" name="enddate"> <br />
          </div>
        </div>

        <!--  decspription-->

        <label class="label" for="deskripsi">Description<br /> </label>
        <textarea class="textArea" id="deskripsi" name="deskripsi" > </textarea>
        <!-- checkbox --> 
        <p class="label">Technologies</p>
        <div class="checkbox">
          <div class="kiri">
            <div style="padding-bottom: 30px">
              <input type="checkbox" id="nodejs" value="fa-brands fa-node-js" name="nodeJs"/>
              <label class="lab-checkbox" for="nodejs"> Node Js </label> <br />
            </div>
            <div>
              <input type="checkbox" id="reactjs" value="fa-brands fa-react" name="reactJs" />
              <label class="lab-checkbox" for="reactjs"> React Js </label>
            </div>
          </div>

          <div class="kanan">
            <div style="padding-bottom: 30px">
              <input type="checkbox" id="nextjs" value="fa-brands fa-python" name="nextJs"/>
              <label class="lab-checkbox" for="nextjs"> Next JS </label> <br />
            </div>
            <div>
              <input type="checkbox" id="javascript" value="fa-brands fa-js" name="javascript"/>
              <label class="lab-checkbox" for="javascript"> Javascript </label>
            </div>
          </div>
        </div>

        <!-- upload image -->
        <div style="margin-top: 15px">
          <label class="label">Upload Image</label>
          <label for="input-image">
            <div for="input-image" class="image">
              <div style="display: flex">
                <button class="button-image">Choose</button>
                <input class="buttonInput" type="file" id="input-image" hidden name="image" />
              {{!-- <img src={{blog.image}} /> --}}
              </div>
              <div
              style="display: flex; align-items: center; padding-left: 300px"
              >
            </div>
          </label>
          </div>
       
        <!-- button -->
        <button class="buttonForm" type="submit">submit</button>
      </form>

 </div>

